<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>login.html</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>com.portal.servlet.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/facultydashboard</url-pattern>
        <url-pattern>/studentdashboard</url-pattern>
        <url-pattern>/facultyDashboard.jsp</url-pattern>
        <url-pattern>/studentDashboard.jsp</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>LoginAccessFilter</filter-name>
        <filter-class>com.portal.servlet.LoginAccessFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginAccessFilter</filter-name>
        <url-pattern>/login.html</url-pattern>
    </filter-mapping>

</web-app>